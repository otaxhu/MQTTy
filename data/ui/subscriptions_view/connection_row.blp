using Gtk 4.0;
using Adw 1;

template $MQTTySubscriptionsConnectionRow: Adw.ActionRow {
  activatable: true;
  selectable: false;

  [prefix]
  Box indicator {
    styles [
      "indicator",
      "circular",
    ]

    valign: center;
  }

  [suffix]
  Adw.Spinner spinner {
    valign: center;
    opacity: 0;
  }

  [suffix]
  Switch switcher {
    valign: center;
    active: bind template.connected bidirectional;
  }

  [suffix]
  MenuButton {
    styles [
      "flat",
      "rounded",
    ]

    valign: center;
    icon-name: "view-more-symbolic";
    menu-model: row_menu;
  }
}

menu row_menu {
  item {
    label: _("Edit");
    action: "connection-row.edit";
  }

  item {
    label: _("Delete");
    action: "connection-row.delete";
  }
}
